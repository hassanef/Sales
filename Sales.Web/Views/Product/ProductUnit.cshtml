@{
    ViewData["Title"] = "ProductUnit";
}
@model Sales.Application.Commands.CreateProductUnitCommand
<div class="card">
    <div class="card-header" style="background-color: #5453A6; font-size:large;color:#FFFFFF;">
       ProductUnit
    </div>
    <div class="card-body" >
        <form class="form-signin" method="post" action="@Url.Action("AddProductUnit")">

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" id="name" type="text" class="form-control" maxlength="9">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <button class="btn btn-lg btn-primary " type="submit">Register  </button>
                </div>
            </div>
        </form>
    </div>
</div>

    <div class="container" style="margin-top:12px;">
        <div>
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead style="background-color: #5453A6;color:#FFFFFF;">
                    <tr>
                  
                        <th>ProductUnits</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>

    @section Scripts {


        <script>
            $(document).ready(function () {
                $("#example").DataTable({
                    "paging": false,
                    "scrollY": "300px",
                    "scrollCollapse": true,
                    "ordering": false,
                    "info": false,
                    "processing": true, // for show progress bar
                    "serverSide": true, // for process server side
                    "filter": false, // this is for disable filter (search box)
                    "orderMulti": false, // for disable multiple column at once
                    "ajax": {
                        "url": "/Product/GetProductUnitData",
                        "type": "POST",
                        "datatype": "json"
                    },
                    "columns": [
                        { "data": "text" }
                    ],
                });
            });
            </script>
    }